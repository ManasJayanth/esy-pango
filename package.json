{
  "name": "esy-pango",
  "version": "1.43.000",
  "description": "Pango packaged for esy",
  "esy": {
    "build": [
      "meson setup -Dgir=false --prefix #{self.install} #{self.target_dir}",
      "ninja -C #{self.target_dir}"
    ],
    "install": [
      "meson install -C #{self.target_dir}"
    ],
    "buildEnv": {
      "PYTHONPATH": "#{meson.install / 'lib' / 'python3.7' / 'site-packages'}:$PYTHONPATH",
      "LD_LIBRARY_PATH": "#{pcre.lib}:$LD_LIBRARY_PATH",
      "PKG_CONFIG_PATH": "/usr/lib/x86_64-linux-gnu/pkgconfig:#{esy-fontconfig.lib / 'pkgconfig'}:#{glib.lib / 'pkgconfig'}:#{esy-freetype2.lib / 'pkgconfig'}:#{esy-harfbuzz.lib / 'pkgconfig'}:$PKG_CONFIG_PATH",
      "CFLAGS": "-I#{esy-cairo.install / 'include' / 'cairo'}  -I#{esy-harfbuzz.install / 'include' / 'harfbuzz'} -I#{esy-fontconfig.install / 'include'} -I#{esy-freetype2.install / 'include' / 'freetype2'} $CFLAGS",
      "LDFLAGS": "-L#{esy-cairo.lib} -lcairo $LDFLAGS"
    },
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "val": "#{self.lib / 'pkgconfig' : $PKG_CONFIG_PATH}",
        "scope": "global"
      }
    }
  },
  "dependencies": {
    "meson": "prometheansacrifice/esy-meson#dce5534b0acd7a2b85b5cee78e933796204e0cce",
    "ninja": "prometheansacrifice/esy-ninja#37fae9254002a02bb56c4b65b6fad54fcaae8bae",
    "glib": "prometheansacrifice/esy-glib#b133b09d13178143e2ad916f7ee10ce88695be9d",
    "pcre": "esy-packages/esy-pcre#c5076c8facbebaf5f5718c0e270418fd218add7e",
    "esy-cairo": "prometheansacrifice/esy-cairo#970ee6c109cc155e568e4bb23091cc93a4a5425f",
    "esy-freetype2": "prometheansacrifice/esy-freetype2#b7bfa03f77ad926ba03b2f923878fe3418e0273f",
    "esy-fribidi": "prometheansacrifice/esy-fribidi#b9e5eb1da7057693742af75cf98a0db2cce083a8",
    "esy-fontconfig": "prometheansacrifice/esy-fontconfig#b173706a651684ec557cd68d6344a4392fa1809f",
    "esy-libpng": "esy-packages/esy-libpng#d846df4a8547b3299c7627773008bd97543d7048",
    "esy-harfbuzz": "prometheansacrifice/esy-harfbuzz#bf1f8c37d07186d74ccbf9d858bc0e19f2286086",
    "esy-libffi": "esy-ocaml/libffi#599bc3567ecf839240977b6d9aaf0b80f983b5aa"
  },
  "resolutions": {
    "esy-harfbuzz": "prometheansacrifice/esy-harfbuzz#ebea69d3c3b72a3e7a716751b9fa11be701bafda",
    "esy-cairo": {
      "source": "prometheansacrifice/esy-cairo#970ee6c109cc155e568e4bb23091cc93a4a5425f",
      "override": {
        "buildEnv": {
          "LD_LIBRARY_PATH": "#{pcre.lib}:$LD_LIBRARY_PATH"
        },
        "dependencies": {
          "pcre": "esy-packages/esy-pcre#c5076c8facbebaf5f5718c0e270418fd218add7e"
        }
      }
    },
    "esy-fontconfig": {
      "source": "prometheansacrifice/esy-fontconfig#b173706a651684ec557cd68d6344a4392fa1809f",
      "override": {
        "buildEnv": {
          "LD_LIBRARY_PATH": "#{pcre.lib}:$LD_LIBRARY_PATH"
        },
        "build": [
          [
            "chmod",
            "755",
            "./configure"
          ],
          "find ./ -exec touch -t 200905010101 {} +",
          [
            "bash",
            "-c",
            "env PKG_CONFIG_PATH=/usr/lib/x86_64-linux-gnu/pkgconfig:$PKG_CONFIG_PATH ./configure --disable-dependency-tracking --prefix=#{self.install} #{os == 'windows' ? '--host x86_64-w64-mingw32' : ''}"
          ],
          [
            "make",
            "V=1"
          ],
          [
            "make",
            "install"
          ]
        ],
        "dependencies": {
          "yarn-pkg-config": "prometheansacrifice/yarn-pkg-config#cc5b4f913cccee781461b16d49b902c84727e7ed",
          "pcre": "esy-packages/esy-pcre#c5076c8facbebaf5f5718c0e270418fd218add7e"
        }
      }
    }
  }
}
